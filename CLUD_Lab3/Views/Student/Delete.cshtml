

@model IntroEF.EF.Student1







@{
    ViewBag.Title = "Delete Confirmation";
}

<h2>Are you sure you want to delete this student?</h2>

<div>
    <strong>Name:</strong> @Model.Name <br />
    <strong>CGPA:</strong> @Model.Cgpa
</div>

@using (Html.BeginForm("Delete", "Student", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id) 
    <button type="submit" class="btn btn-danger">Yes</button>
}

<a href="@Url.Action("List", "Student")" class="btn btn-secondary">No</a>
