@model IEnumerable<DepartmentDTO.DTOs.StudentDTO>

<!DOCTYPE html>
<html>
<head>
    <title>Student List</title>
</head>
<body>
    <h2>Student List</h2>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>CGPA</th>
        </tr>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.FName</td>
                <td>@student.LName</td>
                <td>@student.Dob.ToShortDateString()</td>
                <td>@student.Cgpa</td>
            </tr>
        }
    </table>
    <p>
        <a href="@Url.Action("Create", "Student")">Add New Student</a>
    </p>
</body>
</html>
