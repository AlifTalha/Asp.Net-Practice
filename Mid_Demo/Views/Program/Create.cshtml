@model Mid_Demo.DTOs.ProgramDTO

@{
    ViewBag.Title = "Create Program";
}

<h2>Create Program</h2>

@using (Html.BeginForm("Create", "Program", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ProgramName)
        @Html.TextBoxFor(model => model.ProgramName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProgramName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TRPScore)
        @Html.TextBoxFor(model => model.TRPScore, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TRPScore)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ChannelId)
        @Html.DropDownListFor(model => model.ChannelId, (SelectList)ViewBag.ChannelList, "Select Channel", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ChannelId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AirTime)
        @Html.TextBoxFor(model => model.AirTime, new { @class = "form-control", type = "time" })
        @Html.ValidationMessageFor(model => model.AirTime)
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    @Html.ActionLink("Cancel", "List", null, new { @class = "btn btn-secondary" })
}
