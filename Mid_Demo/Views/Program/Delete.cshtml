@model Mid_Demo.EF.Program_Table

@{
    ViewBag.Title = "Delete Program";
}

<h2>Delete Program</h2>

<div class="alert alert-danger">
    Are you sure you want to delete the program <strong>@Model.ProgramName</strong>?
</div>

@using (Html.BeginForm("Delete", "Program", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <!-- Hidden field to pass the ProgramId to the POST action -->
    @Html.HiddenFor(m => m.ProgramId)

    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "List", null, new { @class = "btn btn-secondary" })
}
